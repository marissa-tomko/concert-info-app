<!DOCTYPE html>
<html>
  <head>
    <title>Music by Marissa</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <h1>Concerts!</h1>

    <div id='navigation'>
      <% if logged_in? %>
        <p> <%= current_user.first_name %>  <%= link_to 'Logout', logout_path, method: :delete %> <%= link_to 'Home', root_url %></p>
      <% else %>
        <p><%= link_to 'Login', '/sessions/new' %> <%= link_to 'Sign Up', '/users/new' %>  <%= link_to 'Home', root_url %></p>
      <% end %>
    </div>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
